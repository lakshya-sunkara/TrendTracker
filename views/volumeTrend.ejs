    }
  

    .navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  justify-content: flex-start; 
  align-items: center;
  padding: 1rem 2rem;
  background-color: #141414;
  box-shadow: 0 0 10px #00ffff, 0 0 20px #00ffff;
}

.navbar .brand {
  font-size: 1.7rem;
  font-weight: bold;
  color: #00ffff;
  text-shadow: 0 0 5px #00ffff, 0 0 10px #00ffff, 0 0 20px #00ffff;
